<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.xepozz.crontab</id>
    <name>Crontab Expressions</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko (@xepozz)</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Crontab File"
                implementationClass="com.github.xepozz.crontab.language.CrontabFileType"
                fieldName="INSTANCE"
                language="Crontab"
                extensions="crontab;cron"
                fileNamesCaseInsensitive="crontab;cron"
                patterns="Crontab.*;Cron.*;crontab.*;cron.*"
        />
        <lang.parserDefinition
                language="Crontab"
                implementationClass="com.github.xepozz.crontab.language.parser.CrontabParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="Crontab"
                implementationClass="com.github.xepozz.crontab.language.CrontabSyntaxHighlighterFactory"/>
        <annotator
                language="Crontab"
                implementationClass="com.github.xepozz.crontab.language.CrontabAnnotator"/>
        <multiHostInjector
                implementation="com.github.xepozz.crontab.language.CrontabLanguageInjector"/>

        <lang.foldingBuilder
                language="Crontab"
                implementationClass="com.github.xepozz.crontab.ide.CronScheduleFoldingBuilder"/>
        <lang.commenter
                language="Crontab"
                implementationClass="com.github.xepozz.crontab.ide.CrontabCommenter"/>

        <intentionAction>
            <language>Crontab</language>
            <className>com.github.xepozz.crontab.ide.actions.CrontabGuruIntention</className>
            <category>Crontab intentions</category>
        </intentionAction>
    </extensions>
    <actions>
        <action id="Crontab.OpenCrontabGuruAction" popup="false"
                class="com.github.xepozz.crontab.ide.actions.OpenCrontabGuruAction"
                text="Open in Crontab Guru"
                description="Opens the schedule in the crontab.guru service"
                icon="/icons/cron/pluginIcon.svg">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="CodeMenu" anchor="last"/>
            <add-to-group group-id="Floating.CodeToolbar.Extract" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
